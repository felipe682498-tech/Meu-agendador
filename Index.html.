<body>

<div class="card">
    <h2>Agendar Hor√°rio</h2>
    <input type="text" id="nome" placeholder="Seu Nome">
    <input type="text" id="whatsapp" placeholder="Seu WhatsApp">
    <input type="datetime-local" id="data">
    <button onclick="fazerAgendamento()">Confirmar Agendamento</button>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

    const firebaseConfig = {
  apiKey: "AIzaSyBtBX8l_7Z9uGPA_8cdEuvV44Ns30Tgt7c",
  authDomain: "meu-agendador-7a8ed.firebaseapp.com",
  projectId: "meu-agendador-7a8ed",
  storageBucket: "meu-agendador-7a8ed.firebasestorage.app",
  messagingSenderId: "562762127881",
  appId: "1:562762127881:web:e809db03e93a0f25bf76d8",
  measurementId: "G-JX9F3KGP90"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    window.fazerAgendamento = async function() {
        const nome = document.getElementById('nome').value;
        const zap = document.getElementById('whatsapp').value;
        const data = document.getElementById('data').value;

        if(!nome || !zap || !data) return alert("Preencha tudo!");

        try {
            await addDoc(collection(db, "agendamentos"), {
                cliente_nome: nome,
                whatsapp: zap,
                data_hora: new Date(data),
                status: "pendente"
            });
            alert("Sucesso! Verifique seu Firebase agora!");
        } catch (e) {
            console.error("Erro: ", e);
            alert("Erro ao agendar.");
        }
    }
</script>
